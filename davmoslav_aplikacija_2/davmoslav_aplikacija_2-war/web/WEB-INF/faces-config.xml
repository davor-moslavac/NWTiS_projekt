<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <resource-bundle>
            <base-name>org.foi.nwtis.davmoslav.i18n</base-name>
            <var>i18n</var>
        </resource-bundle>
        <locale-config>
            <default-locale>hr</default-locale>
            <supported-locale>en</supported-locale>
        </locale-config>   
    </application>
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{lokalizacija.sve_adresa}</from-action>
            <from-outcome>OK</from-outcome>
            <to-view-id>/sveAdrese.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{lokalizacija.login}</from-action>
            <from-outcome>OK</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{lokalizacija.registracija}</from-action>
            <from-outcome>OK</from-outcome>
            <to-view-id>/registracija.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/login.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{login.prijava()}</from-action>
            <from-outcome>OK</from-outcome>
            <to-view-id>/zasticeno/korisnickiProfil.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/sveAdrese.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>prijava</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>registracija</from-outcome>
            <to-view-id>/registracija.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{pregledKorisnikovihPortfelja.emailPostavke()}</from-action>
            <from-outcome>OK</from-outcome>
            <to-view-id>/zasticeno/emailPostavke.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>case2</from-outcome>
            <to-view-id>/zasticeno/korisnickiProfil.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/registracija.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{registracija.registriraj()}</from-action>
            <from-outcome>OK</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>zasticeno/emailPostavke.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{emailPovezivanje.citajPoruke()}</from-action>
            <from-outcome>OK</from-outcome>
            <to-view-id>zasticeno/pregledSvihPoruka.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>odabirJezika</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>zasticeno/pregledSvihPoruka.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{pregledSvihPoruka.odaberiMapu()}</from-action>
            <from-outcome></from-outcome>
            <to-view-id>zasticeno/pregledSvihPoruka.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{pregledSvihPoruka.pregledPoruke()}</from-action>
            <from-outcome>OK</from-outcome>
            <to-view-id>zasticeno/pregledPoruke.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>emailPostavke</from-outcome>
            <to-view-id>zasticeno/emailPostavke.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/zasticeno/korisnickiProfil.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{pregledKorisnikovihPortfelja.emailPostavke()}</from-action>
            <from-outcome>OK</from-outcome>
            <to-view-id>/zasticeno/emailPostavke.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
